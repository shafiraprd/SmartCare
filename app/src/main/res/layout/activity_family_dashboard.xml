<?xml version="1.0" encoding="utf-8"?>
<!-- Layout utama pakai RelativeLayout biar bisa atur posisi elemen berdasarkan elemen lain -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyDashboardActivity">

    <!-- Tempat semua isi utama ditaruh -->
    <FrameLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_view"> <!-- supaya nggak ketutupan tombol navigasi bawah -->

        <!-- Tampilan utama dashboard (tugas/koneksi lansia) -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/tasks_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"> <!-- ditampilin saat pertama kali -->

            <!-- AppBar bagian atas -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Toolbar (biasanya buat judul halaman) -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:titleTextColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary" />
            </com.google.android.material.appbar.AppBarLayout>

            <!-- Isi konten utama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <!-- Teks instruksi buat pilih lansia -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih lansia yang ingin Anda kelola:"
                    android:paddingBottom="8dp"
                    android:textSize="18sp"/>

                <!-- RecyclerView buat nampilin daftar lansia -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_elderly_users"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <!-- Tombol plus melayang di pojok bawah, buat nambah koneksi lansia -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_elderly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_add_person"
                android:contentDescription="Tambah Koneksi Lansia"
                android:layout_margin="16dp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- Tampilan profil (disembunyikan dulu, baru muncul saat dibuka) -->
        <LinearLayout
            android:id="@+id/profile_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:background="@android:color/white">

            <!-- Judul "Profil Pengguna" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil Pengguna"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Kartu yang menampilkan email pengguna -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Label teks -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anda login sebagai:"/>

                    <!-- Email user ditampilin di sini -->
                    <TextView
                        android:id="@+id/tv_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="memuat email..."/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer kosong biar tombol di bawah bisa turun ke bawah -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Tombol ganti password -->
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ganti Kata Sandi"/>

            <!-- Tombol logout dengan warna merah -->
            <Button
                android:id="@+id/btn_profile_logout"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                app:strokeColor="@android:color/holo_red_dark"
                android:text="Logout"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Navigasi bawah buat ganti tab (misalnya dari dashboard ke profil) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>
